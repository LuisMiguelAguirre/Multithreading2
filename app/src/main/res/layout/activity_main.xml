<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.multithreading2.MainActivity">

    <TextView
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:id="@+id/tvCounter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Text"
        />


    <TextView
        android:id="@+id/tvId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="Text"
        />

    <Button
        android:text="Using threads"
        android:id="@+id/btnThreads"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="executeThreads"/>


    <Button
        android:text="Using Runnable"
        android:id="@+id/btnRunnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="executeThreads"/>


    <Button
        android:text="Using AsyncTask"
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="executeThreads"/>

    <Button
        android:text="Using Thread and HAndler(message)"
        android:id="@+id/btnThreadHandlerMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="executeThreads"/>

</LinearLayout>
